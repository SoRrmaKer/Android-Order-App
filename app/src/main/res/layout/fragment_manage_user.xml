<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ThemeBlue"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="10dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <ImageView
                        android:id="@+id/frag_user_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/uploadimg"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/frag_user_shopname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Name"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/frag_user_shopdes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Shop Description..."
                        android:textColor="#EEEEEE"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/frag_user_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Account: root"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/layout_order_manage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/order"
                    app:tint="@color/ThemeBlue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:layout_marginTop="5dp"
                    android:textColor="#666"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_comment_manage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/comments"
                    app:tint="@color/ThemeBlue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:layout_marginTop="5dp"
                    android:textColor="#666"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_history_manage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/historyorder"
                    app:tint="@color/ThemeBlue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:layout_marginTop="5dp"
                    android:textColor="#666"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/frag_user_edit_info"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Edit Shop Info"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/editshop"
                android:drawablePadding="15dp"
                android:textColor="#333"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"/>

            <View android:layout_width="match_parent" android:layout_height="1px" android:background="#E0E0E0" android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/frag_user_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Change Password"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/changepwd"
                android:drawablePadding="15dp"
                android:textColor="#333"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"/>

            <View android:layout_width="match_parent" android:layout_height="1px" android:background="#E0E0E0" android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/frag_user_delete_acc"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Delete Account"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/delaccount"
                android:drawablePadding="15dp"
                android:textColor="#333"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"/>

            <View android:layout_width="match_parent" android:layout_height="10dp" android:background="#F5F5F5"/>

            <TextView
                android:id="@+id/frag_user_logout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Log Out"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/logout"
                android:drawablePadding="15dp"
                android:textColor="#333"
                android:textSize="16sp"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>