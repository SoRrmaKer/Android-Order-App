<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.manage.RegisterMainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/register_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Merchant Sign Up"
        app:titleTextColor="@color/white"
        android:background="@color/ThemeBlue"
        app:navigationIcon="@drawable/back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/register_img"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/uploadimg"
                android:layout_marginTop="45dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make All Food Reachable, Make Life Easier"
                android:textSize="16sp"
                android:gravity="center_vertical|center_horizontal"/>

            <EditText
                android:id="@+id/signup_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please Enter Merchant Account"
                android:layout_marginTop="50dp"/>

            <EditText
                android:id="@+id/signup_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please Enter Password"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please Enter Merchant Name"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/signup_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please Enter Description"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:maxLines="5"
                android:gravity="top"
                android:scrollbars="vertical"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/signup_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please Enter Merchant Type"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/ThemeBlue"
                android:text="Sign Up"
                android:textColor="#FFF"
                android:foreground="?android:attr/selectableItemBackground" />

        </LinearLayout>








    </ScrollView>











</LinearLayout>