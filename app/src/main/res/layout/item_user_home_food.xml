<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/img_round"
    android:backgroundTint="@color/white"
    android:padding="10dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/u_item_food_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/jollibee"
            android:scaleType="centerCrop"
            android:background="@drawable/img_round"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/u_item_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spicy Hot Pot"
                android:textSize="18sp"
                android:textColor="#333"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/u_item_month_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month Sold: 38"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textColor="@color/ThemeBlue"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/u_item_food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19.86"
                    android:textColor="@color/ThemeBlue"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/u_item_food_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delicious food description..."
                android:textSize="12sp"
                android:textColor="#777"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#F0F0F0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/u_item_merchant_avatar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/uploadimg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/u_item_merchant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:text="Store Name"
            android:textColor="#666"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textColor="#FF9800"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/u_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>