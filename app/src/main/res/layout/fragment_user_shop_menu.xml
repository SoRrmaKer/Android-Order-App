<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/layout_cart_bar"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/shop_menu_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/search_edit"
            app:queryHint="Search in shop..."
            app:iconifiedByDefault="false"/>
    </LinearLayout>

        <ListView
            android:id="@+id/shop_menu_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:divider="#EEEEEE"/>
    </LinearLayout>

    <include
        android:id="@+id/layout_cart_bar"
        layout="@layout/layout_cart_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>