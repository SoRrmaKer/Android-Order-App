<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/img_round"
    android:backgroundTint="@color/white"
    android:padding="15dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_comment_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/uploadimg"
            android:scaleType="centerCrop"
            android:background="@drawable/img_round"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="15sp"/>

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

                <TextView
                    android:id="@+id/item_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023-12-08"
                    android:textSize="12sp"
                    android:textColor="#999"/>
            </LinearLayout>

            <RatingBar
                android:id="@+id/item_comment_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:isIndicator="true"
                android:layout_marginTop="3dp"
                android:progressTint="#FFC107"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Great food! Will order again."
        android:textColor="#555"
        android:textSize="14sp"
        android:lineSpacingExtra="3dp"/>

    <ImageView
        android:id="@+id/item_comment_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jollibee"
        android:background="@drawable/img_round"
        android:visibility="gone"/>

</LinearLayout>